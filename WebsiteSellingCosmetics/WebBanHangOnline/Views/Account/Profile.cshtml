@model WebBanHangOnline.Models.ApplicationUser
@{
    ViewBag.Title = "Tài khoản của tôi";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/whole_web_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/whole_web_responsive.css">

<div class="container product_section_container">
    <div class="breadcrumbs d-flex flex-row align-items-center">
        <ul>
            <li><a href="/">Trang chủ</a></li>
            <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Tài khoản của tôi</a></li>
        </ul>
    </div>
    <h2 id="title" style="text-align: center">@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-12 d-flex justify-content-center align-content-center">
            @using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { role = "form", id = "updateProfileForm", style = "min-width: 450px;" }))
            {
            @Html.ValidationSummary(false)
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Tên đăng nhập</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" name="UserName" value="@Model.UserName" readonly />
            </div>
            <div class="form-group">
                <label>Họ tên</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" name="FullName" value="@Model.FullName" />
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" name="Phone" value="@Model.Phone" />
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" name="Address" value="@Model.Address" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" name="Email" value="@Model.Email" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="CẬP NHẬT" class="btn green-button text-white" />
                <input type="button" onclick="window.history.back()" value="QUAY LẠI" class="btn red-button text-white" />
            </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/jsUser.js"></script>
}

