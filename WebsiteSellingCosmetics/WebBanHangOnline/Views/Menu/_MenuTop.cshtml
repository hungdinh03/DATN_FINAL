@model IEnumerable<WebBanHangOnline.Models.EF.SystemConfig>

<style>
    .navbar_menu {
        perspective: 1000px;
    }

    .navbar_menu li {
        transition: transform 0.3s ease-in-out;
        transform: translateZ(0) scale(1);
    }

    .navbar_menu li:hover {
        transform: translateZ(0) scale(1.3);
    }
</style>

@if (Model != null && Model.Any())
{
<ul class="navbar_menu">
    @foreach (var item in Model)
        {
            if (item.Alias.Equals("trang-chu"))
            {
                item.Alias = "";
            }
            if (item.Alias.Equals("san-pham"))
            {
                item.Alias = "danh-muc-san-pham/tat-ca";
            }
    <li><a href="/@item.Alias">@item.Title</a></li>
        }
</ul>
}

@section scripts{
    <script src="~/Scripts/jsMenu.js"></script>
}
