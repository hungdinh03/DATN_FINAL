@model IEnumerable<WebBanHangOnline.Models.EF.OrderDetail>
@if (Model != null && Model.Any())
{
    int i = 1;
    var tongTien = 0;
    <table class="table table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Product.Title</td>
                    <td>@string.Format("{0:N0}", item.Price)<u>đ</u></td>
                    <td>@item.Quantity</td>
                    <td>@string.Format("{0:N0}", item.Price * item.Quantity)<u>đ</u></td>
                </tr>
                tongTien += @item.Price * @item.Quantity;
                i++;
            }
            <tr class="font-weight-bold">
                <td colspan="3"></td>
                <td>Tổng tiền:</td>
                <td>@string.Format("{0:N0}", tongTien)<u>đ</u></td>
            </tr>
        </tbody>
    </table>
}
