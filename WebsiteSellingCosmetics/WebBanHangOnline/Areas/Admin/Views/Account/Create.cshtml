@model WebBanHangOnline.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Thêm mới tài khoản";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li><a class="nav-link"><i class="fa fa-angle-right" aria-hidden="true"></i></a> </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Account" class="nav-link">Tài khoản</a>
        </li>
        <li><a class="nav-link"><i class="fa fa-angle-right" aria-hidden="true"></i></a> </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Account/Create" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Account">Tài khoản</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới tài khoản</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Create", "Account", FormMethod.Post, new { role = "form", id = "createForm" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Tên đăng nhập</label>
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Họ tên</label>
                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Số điện thoại</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Địa chỉ</label>
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Quyền</label>
                        @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Role, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Mật khẩu</label>
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Nhập lại mật khẩu</label>
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            @Html.CheckBoxFor(x => x.IsActive, new { @class = "custom-control-input", @id = "IsActiveCheckbox" })
                            <label for="IsActiveCheckbox" class="custom-control-label">Hoạt động</label>
                        </div>
                    </div>

                    <div id="validation-summary" style="display: none; padding: 0;" class="col-md-12">
                        <div class="alert alert-danger" role="alert" style="width: fit-content;">
                            <ul id="validation-error" class="text-black" style=" list-style-type: none; padding: 0; margin : 0;"></ul>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                        <a href="#" class="btn btn-danger" onclick="window.history.back()">Quay lại</a>
                    </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Areas/Admin/Scripts/jsAccount.js"></script>
}